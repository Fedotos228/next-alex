model Hero {
  id       String @id @default(cuid())
  title    String
  subtitle String
  image    String
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Gallery {
  id     String   @id @default(cuid())
  title  String
  images Images[]
}

model Images {
  id        String   @id @default(cuid())
  alt       String
  image     String
  Gallery   Gallery? @relation(fields: [galleryId], references: [id])
  galleryId String?
}
